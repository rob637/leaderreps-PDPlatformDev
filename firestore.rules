// Firestore Security Rules - HARDENED
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Global metadata - only authenticated users can read, only admins can write
    match /global/{document} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.token.email in ['rob@sagecg.com', 'admin@leaderreps.com'] ||
         get(/databases/$(database)/documents/global/metadata).data.adminemails.hasAny([request.auth.token.email]));
    }
    
    // User artifacts - users can only access their own data
    match /artifacts/{appId}/users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User modules - users can only access their own data
    match /modules/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User profiles and data - users can only access their own data
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public read-only content (catalogs, etc.)
    match /public/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Public content should be managed server-side
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}